<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.github.syafdia.androidboilerplate.feature.information.InformationViewModel"
            />
    </data>

    <LinearLayout
        android:id="@+id/linearLayout_information_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/mdGrey100"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</layout>